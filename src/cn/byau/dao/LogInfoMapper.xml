<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.byau.dao.LogInfoDAO">
	<resultMap id="BaseResultMap" type="LogInfo">
		<id column="logId" property="logId" />
		<result column="userId" property="userId" />
		<result column="loginTime" property="loginTime" />
		<result column="userName" property="user.userName" />
		<result column="ip" property="ip" />
		<result column="status" property="status" />
	</resultMap>
    <select id="list" resultMap="BaseResultMap" parameterType="java.util.Map">
		select log.logId,log.userId,log.loginTime,u.userName,log.ip,log.status
		from
		loginfo log,User u
		where log.userId=u.userId
		<if test="startTime!=null and startTime!=''">
    <![CDATA[   and logintime>=#{startTime}]]>
		</if>
		<if test="endTime!=null and endTime!='' ">
    <![CDATA[  and logintime<=#{endTime}]]>
		</if>
	</select>


	<sql id="Base_Column_List">
		id, userId, loginTime,ip,status
	</sql>

	<insert id="save" parameterType="LogInfo">
		insert into loginfo
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="logId != null">
				logId,
			</if>
			<if test="userId != null">
				userId,
			</if>
			<if test="loginTime != null">
				loginTime,
			</if>
			<if test="ip != null">
				ip,
			</if>
			<if test="status != null">
				status,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="logId != null">
				#{logId,jdbcType=INTEGER},
			</if>
			<if test="userId != null">
				#{userId,jdbcType=VARCHAR},
			</if>
			<if test="loginTime != null">
				#{loginTime,jdbcType=TIMESTAMP},
			</if>

			<if test="ip != null">
				#{ip},
			</if>
			<if test="status != null">
				#{status},
			</if>
		</trim>
	</insert>

</mapper>
